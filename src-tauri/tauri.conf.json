{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Markdown Notes",
    "version": "0.1.0",
    "identifier": "com.markdown.notes",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm prebuild",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Markdown Notes",
                "width": 1200,
                "height": 700,
                "minWidth": 800,
                "minHeight": 600,
                "transparent": true,
                "decorations": false,
                "shadow": true,
                "devtools": true
            },
            {
                "label": "auth",
                "title": "登录 - Markdown Notes",
                "url": "index.html#/auth",
                "width": 400,
                "height": 520,
                "minWidth": 400,
                "minHeight": 520,
                "maxWidth": 400,
                "maxHeight": 520,
                "resizable": false,
                "center": true,
                "decorations": false,
                "shadow": true,
                "alwaysOnTop": true,
                "skipTaskbar": true,
                "visible": false,
                "devtools": true
            }
        ],
        "security": {
            "csp": null
        },
        "withGlobalTauri": true
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
